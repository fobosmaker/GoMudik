<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/left_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="2.5dp"
        android:paddingStart="2.5dp"
        android:paddingEnd="5dp">
        <com.daasuu.bl.BubbleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:padding="8dp"
            android:id="@+id/chat_bubble"
            app:bl_arrowHeight="25dp"
            app:bl_arrowPosition="10dp"
            app:bl_arrowWidth="15dp"
            app:bl_cornersRadius="20dp"
            app:bl_strokeWidth="1dp"
            app:bl_arrowDirection="left">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/cage_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <RelativeLayout
                        android:id="@+id/cage_chat_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/cage_chat_content">
                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            />
                    </RelativeLayout>
                    <!--<RelativeLayout
                        android:id="@+id/cage_chat_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cage_chat_user"
                        android:layout_margin="5dp"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/chat_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/mosque" />
                    </RelativeLayout>-->
                    <RelativeLayout
                        android:id="@+id/cage_chat_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cage_chat_user">
                        <TextView
                            android:id="@+id/chat_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/cage_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/cage_chat"
                    android:layout_below="@id/cage_chat">
                    <TextView
                        android:id="@+id/date_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:textColor="@color/colorAccent"/>
                </RelativeLayout>
            </RelativeLayout>
        </com.daasuu.bl.BubbleLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/right_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/left_chat"
        android:paddingTop="5dp"
        android:paddingBottom="2.5dp"
        android:paddingStart="2.5dp"
        android:paddingEnd="5dp">
        <com.daasuu.bl.BubbleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:padding="8dp"
            android:id="@+id/your_chat_bubble"
            app:bl_arrowHeight="25dp"
            app:bl_arrowPosition="10dp"
            app:bl_arrowWidth="15dp"
            app:bl_cornersRadius="20dp"
            app:bl_strokeWidth="1dp"
            app:bl_arrowDirection="right"
            android:layout_alignParentEnd="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/your_cage_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white">
                    <RelativeLayout
                        android:id="@+id/your_cage_chat_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/your_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            />
                    </RelativeLayout>
                    <!--<RelativeLayout
                        android:id="@+id/cage_chat_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cage_chat_user"
                        android:layout_margin="5dp"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/chat_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:scaleType="centerInside"
                            android:src="@drawable/mosque" />
                    </RelativeLayout>-->
                    <RelativeLayout
                        android:id="@+id/your_cage_chat_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/your_cage_chat_user">
                        <TextView
                            android:id="@+id/your_chat_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/your_cage_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/your_cage_chat"
                    android:layout_below="@id/your_cage_chat">
                    <TextView
                        android:id="@+id/your_date_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAccent"/>
                </RelativeLayout>
            </RelativeLayout>
        </com.daasuu.bl.BubbleLayout>
    </RelativeLayout>
</RelativeLayout>