<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/cage_menu_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="1dp">
        <RelativeLayout android:id="@+id/cage_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/button"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/no_photo"/>
            <RelativeLayout
                android:id="@+id/user_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/user_photo"
                android:layout_toStartOf="@id/add_contact">
                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/black"
                    android:singleLine="true"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/username"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:singleLine="true"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp">
            <RelativeLayout
                android:id="@+id/button_message"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true">
                <RelativeLayout
                    android:id="@+id/image_cage_message"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_edge_primary_dark"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/image_icon_message"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_chat_white_24dp"
                        tools:ignore="contentDescription"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/badge_message"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/badge_background"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible">
                    <TextView
                        android:id="@+id/count_badge_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/button_notif"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_toEndOf="@id/button_message">
                <RelativeLayout
                    android:id="@+id/image_cage_notif"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/round_edge_primary_dark"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:id="@+id/image_icon_notif"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_notifications"
                        tools:ignore="contentDescription" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/badge_notification"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/badge_background"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="invisible">
                    <TextView
                        android:id="@+id/count_badge_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:text="99+"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>