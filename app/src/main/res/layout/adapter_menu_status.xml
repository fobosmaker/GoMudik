<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryLite"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/contentCage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp">
        <RelativeLayout
            android:id="@+id/user_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="5dp">
            <RelativeLayout android:id="@+id/cage_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_photo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <RelativeLayout
                    android:id="@+id/user_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/user_photo">
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:singleLine="true"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/username"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:singleLine="true"
                        android:textSize="13sp"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/image_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_data">
            <ImageView
                android:id="@+id/thumbnail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:visibility="visible"
                tools:ignore="ContentDescription"/>
            <RelativeLayout
                android:id="@+id/button_zoom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/round_button_cancel"
                android:layout_alignEnd="@id/thumbnail_status"
                android:layout_alignParentTop="true"
                android:visibility="gone">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_action_search"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/status_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_data"
            android:layout_marginBottom="5dp">
            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/status_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:trimExpandedText="Show more"
                app:trimCollapsedText="Show less"
                android:textColor="@color/black"
                app:trimMode="trimModeLength"
                app:trimLength="100"
                app:colorClickableText="@color/colorAccent"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/status_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status_data"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/img_world"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="3dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_public_grey_24dp"
                    tools:ignore="ContentDescription"/>
                <TextView
                    android:id="@+id/status_published"
                    android:layout_toEndOf="@id/img_world"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="13dp"/>
            </RelativeLayout>
                <!--<RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:id="@+id/img_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="3dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_favorite_border_grey_24dp"
                        tools:ignore="ContentDescription"/>
                    <TextView
                        android:id="@+id/total_favorites"
                        android:layout_toEndOf="@id/img_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>-->
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>