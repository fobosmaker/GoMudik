<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryLite"
    android:id="@+id/cage_adapter">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="1dp">
        <RelativeLayout
            android:id="@+id/newGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ex_thumbnail"
                tools:ignore="ContentDescription"
                android:adjustViewBounds="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/video_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newGroup"
            android:layout_marginBottom="40dp">
            <ImageView
                android:id="@+id/publisher"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/logo_round"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                tools:ignore="ContentDescription"/>
            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/publisher"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="CNNIndonesia"/>
            <TextView
                android:id="@+id/video_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/publisher"
                android:layout_below="@+id/video_title"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="13sp"
                android:text="CNN Indonesia"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>